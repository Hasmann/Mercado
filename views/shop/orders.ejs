<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/orders.css">
    </head>

    <body>
        <%- include('../includes/navigation.ejs') %>
        <main>
            <% if (orders.length <= 0) { %>
                <h1>Nothing there!</h1>
            <% } else { %>
                <ul class="orders">
                    <% orders.forEach(order => { %>
                        <li class="orders__item">
                            <h1><b>Order No- #</b><%= order._id %></h1>
                            <h4><b>PRODUCTID: </b><%= order.product.items.productId._id %></h4>        
                            <h4><b>QUANTITY: </b><%= order.product.items.quantity %></h4>     
                          <a href='/order/<%=order._id%>'><h4>Download Invoice</h4></a>             
                        </li>
                    <% }); %>
                </ul>
            <% } %>
        </main>
        <%- include('../includes/end.ejs') %>