<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/auth.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>



    <main>
        <div class="userMainNav">
            <div class="activeUserNav"><b>USER</b></div> 
            <div class="nonactiveUserNav"><b><a href="http://localhost:2007/Mercado/Merchant/signUp">MERCHANT</a></b></div>
          </div>
                   
          <div style="text-align:center" class="login-form">
            <% if(errorMessage) {%>
                <div class=" error" ><%= errorMessage%></div> 
                <%}%>
                <div class=" error1" ><%= errorMessage%></div> 
                <div class="form-control">
                    <label for="fullName">fullName</label>
                    <input type="text" name="fullName" id="fullName">
                </div>
            <div class="form-control">
                <label for="email">E-Mail</label>
                <input type="email" name="email" id="email">
            </div>
            <div class="form-control">
                <label for="password">Password</label>
                <input style="display: inline;" type="password" name="password" class="passwordchange"  id="passwordId">
            </div>
            <div class="form-control">
                <label for="password">Confirm-Password</label>
                <input style="display: inline;" type="password" name="passwordConfirm"  class="passwordchange" id="passwordConfirm">
                <i class="far fa-eye" id="passwordToggle" style="cursor: pointer;display: inline;"></i>
            </div>
            <input type="hidden" class="csrf" name="_csrf" value="<%=csrfToken%>">
            
            <button style="text-align: center;" class="btn" type="submit" onclick="userSignUp()">signUp</button>
        </div>
    </main>
<%- include('../includes/end.ejs') %>
<script src="/js/userSignUp.js"></script>