    <div class="dropdown">
      <button class="dropbtn">See Previous Years <b>&#x2193</b></button>
      <div class="dropdown-content">
        <% for(let i =0; i<6;i++){%> 
        <a href="/Mercado/Merchant/myproductStats/<%=productId%>/<%=2018+i%>" >Stats For: <%=2018+i %></a>
        <%}%>
      </div>
    </div>
  </div>
</div>

