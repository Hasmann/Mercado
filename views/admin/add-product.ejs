<%- include('../includes/head.ejs') %>
    <link rel="stylesheet" href="/css/forms.css">
    <link rel="stylesheet" href="/css/product.css">
</head>

<body>
   <%- include('../includes/navigation.ejs') %>

   
   <main style="margin-top: 30px
   ;">
    <form class="product-form" action="/Mercado/postProduct" method="POST" enctype="multipart/form-data">
        <% if(errorMessage) {%>
            <div class=" error" ><%= errorMessage%></div> 
            <%}%>
            <div class=" error1" ><%= errorMessage%></div> 
       
            
        <div class="form-control">
            <label style="display: flex;justify-content: center;align-items: center;" for="name">Product Title</label>
            <input  type="text" name="name" id="title">
        </div>

        <div  class="form-control">
            <label style="display: flex;justify-content: center;align-items: center;" for="Category">Category</label>
            <div class="selectCustom">
                <select name="category" id="category" >
                  <option value=" ">Select Category</option>
                  <option value="Beauty and personal care">Beauty and personal care</option>
                  <option value="Books and media">Books and media</option>
                  <option value="Clothing and fashion">Clothing and fashion</option>
                  <option value="Electronics">Electronics</option>
                  <option value="Furniture and home decor">Furniture and home decor</option>
                  <option value="Health and wellness">Health and wellness</option>
                  <option value="Home and garden">Home and garden</option>
                  <option value="Musical instruments">Musical instruments</option>
                  <option value="Sports and outdoor gear">Sports and outdoor gear</option>
                  <option value="Toys and games">Toys and games</option>                             
                </select>
              </div>
        </div>

        <div class="form-control">
            <label style="display: flex;justify-content: center;align-items: center;" for="image">Image</label>
            <input type="file" name="imageUrl" id="imageUrl">
        </div>
      

        <div class="form-control">
            <label style="display: flex;justify-content: center;align-items: center;" for="price">Price</label>
            <input  type="number" name="price" id="price" step="0.01">
        </div>
        <div style="display: flex; flex-wrap: wrap;">
            <div class="form-control" style="flex: 1;">
              <label style="display: flex; justify-content: center; align-items: center;" for="summary">Summary</label>
              <textarea name="summary" id="summary" rows="5"></textarea>
            </div>
          
            <div class="form-control" style="flex: 1;">
              <label style="display: flex; justify-content: center; align-items: center;" for="description">Description</label>
              <textarea name="description" id="description" rows="5"></textarea>
            </div>
          </div>
          

        <div class="form-control">
            <label style="display: flex;justify-content: center;align-items: center;" for="stockQuantity">StockQuantity</label>
            <input  type="number" name="stockQuantity" id="stockQuantity">
        </div>
        <input type="hidden" class="csrf" name="_csrf" value="<%=csrfToken%>">
        <div style="display: flex; justify-content: center;">
            <button class="btn" type="submit">Add Product</button>
          </div>
          
    </form>
</main>

<%- include('../includes/end.ejs') %>
<script src="/js/addProduct.js"></script>